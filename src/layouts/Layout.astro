---
import { ViewTransitions } from "astro:transitions";
import { HomeScene } from "../components/scenes/home-scene";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions fallback="swap" />
  </head>
  <body>
    <div transition:persist transition:name="scene" class="scene-container">
      <HomeScene client:only />
    </div>
    <slot />
    <style is:global>
      @font-face {
        font-family: "starjedi";
        src: url(fonts/Starjedi.ttf);
      }

      @font-face {
        font-family: "starjhol";
        src: url(fonts/Starjhol.ttf);
      }

      :root {
        --primary-color: #ffe81f;
        --on-primary-color: #000;

        --background-color: #000;
        --on-background-color: white;

        --font-size-sm: clamp(0.8rem, 0.17vw + 0.76rem, 0.89rem);
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-md: clamp(1.25rem, 0.61vw + 1.1rem, 1.58rem);
        --font-size-lg: clamp(1.56rem, 1vw + 1.31rem, 2.11rem);
        --font-size-xl: clamp(1.95rem, 1.56vw + 1.56rem, 2.81rem);
        --font-size-xxl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
        --font-size-xxxl: clamp(3.05rem, 3.54vw + 2.17rem, 5rem);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      html,
      body {
        background: var(--background-color);
        font-family: starjhol, system-ui, sans-serif;
        height: 100%;
      }
    </style>
    <style>
      .scene-container {
        width: 100%;
        height: 100vh;
      }
    </style>
  </body>
</html>
